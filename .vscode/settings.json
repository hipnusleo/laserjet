// Place your settings in this file to overwrite default and user settings.
{
    "editor.fontSize": 19,
    "editor.rulers": [80],
    "editor.scrollBeyondLastLine": false,
    "editor.wrappingColumn": 80,
    "editor.wordWrap": true,
    "editor.quickSuggestionsDelay": 5,
    "editor.formatOnType": true,
    "editor.snippetSuggestions": "inline",
    "editor.overviewRulerLanes": 3,
    "editor.cursorBlinking": "solid",
    "editor.mouseWheelZoom": true,
    "editor.renderControlCharacters": true,
    "editor.stablePeek": false,
    "editor.formatOnSave": true,
    "editor.renderIndentGuides": true,
    "workbench.editor.openPositioning": "first",
    "workbench.sideBar.location": "right",
    "files.associations": { "*.py": "python", "*.html": "html" },
    "files.autoSave": "onWindowChange",
    "cSpell.enabledLanguageIds": [
        "csharp",
        "go",
        "javascript",
        "javascriptreact",
        "markdown",
        "php",
        "plaintext",
        "python",
        "text",
        "typescript",
        "typescriptreact",
        "yml",
        "html"
    ],
    "code-runner.executorMap": {
        "javascript": "node",
        "java": "cd $dir && javac $fileName && java $fileNameWithoutExt",
        "c": "gcc $fullFileName && ./a.out",
        "cpp": "g++ $fullFileName && ./a.out",
        "php": "php",
        "python": "C:\\Python27\\python.exe",
        "perl": "perl",
        "ruby": "ruby",
        "go": "C:\\Go",
        "lua": "lua",
        "groovy": "groovy",
        "powershell": "powershell -ExecutionPolicy ByPass -File",
        "bat": "",
        "shellscript": "bash",
        "fsharp": "fsi",
        "csharp": "scriptcs",
        "vbscript": "cscript //Nologo",
        "typescript": "ts-node",
        "coffeescript": "coffee",
        "scala": "scala",
        "swift": "swift",
        "julia": "julia",
        "crystal": "crystal",
        "ocaml": "ocaml",
        "r": "Rscript",
        "applescript": "osascript"
    },
    "code-runner.executorMapByFileExtension": {
        ".vbs": "cscript //Nologo",
        ".scala": "scala",
        ".jl": "julia",
        ".cr": "crystal",
        ".ml": "ocaml",
        ".py": "python"
    },
    "code-runner.languageIdToFileExtensionMap": {
        "bat": ".bat",
        "powershell": ".ps1",
        "python": ".py"
    },
    "code-runner.defaultLanguage": "",
    "code-runner.runInTerminal": true,
    "python.pythonPath": "C:\\Python27\\python.exe",
    "python.jediPath": "",
    "python.linting.pep8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.pep8Path": "C:\\Python27\\Scripts\\pep8.exe",
    "python.formatting.autopep8Path": "C:\\Python27\\Scripts\\autopep8.exe",
    "beautify.onSave": ["js", "html", "css"]
}